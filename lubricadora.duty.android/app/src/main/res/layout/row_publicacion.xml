<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/card_button_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_tipo_ejercicio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_portada_publicacion"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Velocidades en autos"
            android:textAllCaps="true"
            android:textColor="@color/brown_900"
            android:textSize="18sp"
            android:typeface="normal"
            android:layout_marginLeft="@dimen/card_button_margin"
            android:layout_marginTop="@dimen/btn_padding" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TIPS DE NUTRICIÓN"
                android:id="@+id/textView3"
                android:layout_marginLeft="@dimen/card_button_margin"
                android:textColor="@android:color/black"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Llevar un orden en las ingestas y horarios. Nos ayudará a que el ritmo del cuerpo en el día a día y en los entrenamientos se mantenga constante, sin sustos ni bajones (errores comunes de la dieta: saltarse comidas)."
            android:id="@+id/tvDescripcion"
            android:layout_marginLeft="@dimen/card_button_margin"
            android:layout_marginRight="@dimen/card_button_margin"
            android:layout_marginBottom="@dimen/card_button_margin"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:text="29/11/2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/tv_fecha_ingresada"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="@dimen/card_button_margin"
            android:paddingRight="@dimen/card_button_margin" />

    </LinearLayout>

</android.support.v7.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_nav" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/boton_redondeado_rojo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView4"
                android:drawableLeft="@drawable/ic_account_box_deep_orange_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="@dimen/card_title_margin"
                android:text="Contactos : 0998 646 666" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:drawableLeft="@drawable/ic_mail_red_700_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="@dimen/card_title_margin"
                android:text="Dirección : Valerio Estacio Mz 2235 Sl9 5ta etapa" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvEmail"
                android:drawableLeft="@drawable/ic_room_red_700_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="@dimen/card_title_margin"
                android:text="Dirección : Valerio Estacio Mz 2235 Sl9 5ta etapa" />
            <TextView
                android:id="@+id/tvVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvDireccion"
                android:drawableTop="@drawable/ic_business_red_700_24dp"
                android:drawablePadding="5dp"
                android:padding="@dimen/card_title_margin"
                android:text="@string/vision"
                android:textAlignment="textStart" />


            <TextView
                android:id="@+id/tvMision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvVision"
                android:drawableTop="@drawable/ic_equalizer_red_700_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="@dimen/card_title_margin"
                android:text="@string/mision" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>